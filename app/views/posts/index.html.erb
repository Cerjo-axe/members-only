<h1>Portal blog</h1>

<div>
    <% unless current_user%>
        <h3><%= link_to "Sign up", signup_path %></h3>
        <h3><%= link_to "Log in", login_path %></h3>
    <% else%>
        <h2>Welcome<%=current_user.username%></h2>
        <h3><%= link_to "Log out", logout_path %></h3>
    <%end%>
</div>

<h1>Posts</h1>

<%if current_user%>
    <p><%= link_to "Create Post", newpost_path %></p>
<%end%>

<div>
    <ul>
        <% @posts.each do |post|%>
            <li>
                <strong><h2><%=post.title%></h2></strong>
                <br/>
                <% if current_user%>
                    <strong><%= post.user.username%></strong>
                    <br>/
                <%end%>
                <%= post.body%>
            <li>
        <% end %>
    </ul>
</div>